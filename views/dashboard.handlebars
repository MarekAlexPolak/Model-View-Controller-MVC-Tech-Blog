<div class="row">
    <div class="col-auto">
        <h2>Welcome {{username}}!</h2>
    </div>
</div>
<section class="vh-80">
  <div class="container h-0">
    <div class="row d-flex justify-content-center align-items-center h-0">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Create New Blog</p>

                <form class="mx-1 mx-md-4" id="postBlog">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="blog-title" class="form-control" />
                      <label class="form-label" for="blog-title">Blog Title</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="blog-desc" class="form-control" />
                      <label class="form-label" for="blog-desc">Blog Description</label>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Create Blog</button>
                  </div>

                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
<h3>Active Blogs</h3>
{{#each blogs as |blog|}}
    <div class="row mb-2">
        <div class="col-md-8">
            <h4>
                <a href="/blog/{{blog.id}}">{{blog.title}}</a>
            </h4>
        </div>
        <div class="col-md-4">
            <button class="btn btn-danger" data-id="{{blog.id}}" id="deleteBtn">DELETE</button>
        </div>
    </div>
{{/each}}



<script src="/js/dashboard.js"></script>