
 <h2 class="mb-4">Blog Directory</h2>
{{#each blogs as |blog|}}
  <div class="container mt-4">
    <div class="list-group-item">
        <h5 class="mb-1"><a href="/blog/{{blog.id}}">{{blog.title}}</a></h5>
        <p class="mb-1">{{blog.description}}</p>
        <small>Created by {{blog.user.username}} on {{format_date blog.date_created}}</small>
    </div>
  </div>
{{/each}}